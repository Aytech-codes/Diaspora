/* Reset + Base */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: "Segoe UI", sans-serif;
  scroll-behavior: smooth; /* <- Smooth scrolling for all anchor links */
}

body {
  line-height: 1.6;
  background: #ffffff;
  color: #222;
}

/* Navbar */
header {
  background: #0b2c50; /* trust blue */
  padding: 12px 0;
  position: fixed;       /* change sticky â†’ fixed */
  top: 0;
  width: 100%;
  z-index: 1000;
  transition: top 0.3s;  /* smooth slide up/down */
}

.footer-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: flex-start;
  gap: 40px;
  padding-bottom: 30px;
}

.footer-logo {
  flex: 1 1 150px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.footer-logo-img {
  height: 80px;
  width: 80px;
  border-radius: 50%;
  object-fit: cover;
  border: 2px solid #fff;
}

.contact-form {
  flex: 2 1 400px;
}

.socials {
  flex: 1 1 150px;
  text-align: center;
}

.socials .social-icons a {
  color: #fff;
  font-size: 1.6rem;
  margin: 0 12px;
  transition: 0.3s;
}

.socials .social-icons a:hover {
  color: #FFD9A5;
}

/* Responsive adjustments */
@media (max-width: 768px) {
  .footer-container {
    flex-direction: column;
    align-items: center;
  }

  .contact-form {
    width: 100%;
    max-width: 400px;
    margin: 20px 0;
  }

  .socials {
    margin-bottom: 20px;
  }
}


.navbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 90%;
  margin: auto;
}

.logo {
  font-size: 1.3rem;
  color: #fff;
  font-weight: bold;
}

.nav-links {
  list-style: none;
  display: flex;
  gap: 25px;
  margin-left: auto; /* pushes nav to the right */
}

.nav-links li a {
  text-decoration: none;
  color: #fff;
  font-weight: 500;
  transition: color 0.3s;
}

.nav-links li a:hover {
  color: #ffd60a;
}
.logo {
  display: flex;
  align-items: center;
}

.logo a {
  display: flex;
  align-items: center;
  text-decoration: none;
  color: inherit;
}

.logo-img {
  height: 60px;          /* Adjust size */
  width: 60px;           /* Keep it square for perfect circle */
  border-radius: 50%;    /* Makes it round */
  object-fit: cover;     /* Ensures the image fills the circle without distortion */
  margin-right: 10px;
}

.logo-text {
  font-size: 1.2rem;
  font-weight: bold;
}

/* Hero */
.hero {
  height: 85vh;
  background: 
    linear-gradient(rgba(0,0,0,0.65), rgba(0,0,0,0.65)),
    url("Img/clayton-cardinalli-mMnU-UMmXok-unsplash.jpg") center/cover no-repeat;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
  color: #ffffff;
  padding: 0 20px;
  background-attachment: fixed;
}

.hero h1 {
  font-size: 3rem;
  margin-bottom: 15px;
  color: #fff;
}

.hero p {
  font-size: 1.3rem;
  margin-bottom: 20px;
  color: #fff;
}

.btn {
  display: inline-block;
  padding: 12px 24px;
  background: #0b2c50;
  color: #fff;
  border-radius: 6px;
  font-weight: bold;
  transition: 0.3s;
  text-decoration: none;
}

.btn:hover {
  background: #0b2c50;
}

/* Section */
.section {
  padding: 60px 8%;
  background: #ffffff;
  color: #222;
  margin-bottom: 30px;
  border-radius: 12px;
}

.section h2 {
  text-align: center;
  margin-bottom: 25px;
  font-size: 1.9rem;
  color: #0d3b66;
}

/* Forums */
.forum {
  margin-bottom: 25px;
  padding: 20px;
  background: #f8f9fa;
  border-radius: 10px;
  color: #222;
  transition: transform 0.3s, box-shadow 0.3s;
}

.forum:hover {
  transform: translateY(-5px);
  box-shadow: 0 6px 16px rgba(0,0,0,0.1);
}

/* Newcomers */
.newcomers {
  padding: 70px 8%;
  background: #ffffff;
  color: #222;
}

.newcomers .intro {
  text-align: center;
  margin-bottom: 35px;
}

.offer-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(270px, 1fr));
  gap: 25px;
}

.offer {
  background: #f8f9fa;
  color: #222;
  padding: 25px;
  border-radius: 12px;
  box-shadow: 0 4px 14px rgba(0,0,0,0.08);
  transition: transform 0.3s;
}

.offer:hover {
  transform: translateY(-6px);
}

/* CTA */
.cta {
  background: #0d3b66; 
  color: #fff;
  padding: 40px;
  text-align: center;
  border-radius: 12px;
  margin-top: 50px;
}

.cta .btn {
  background: #fff;
  color: #0d3b66;
  margin-top: 20px;
}

.cta .btn:hover {
  background: #ddd;
  color: #0d3b66;
}

/* Footer */
footer {
  background: #0b2c50;
  color: #fff;
  padding: 60px 8% 30px;
  margin-top: 40px;
}
/* Community Guidelines & Getting Involved */
.guidelines,
.involved {
  list-style: none;       /* Remove bullets */
  padding: 0;
  text-align: center;     /* Center-align the text */
  max-width: 700px;
  margin: 0 auto 40px;    /* Center block and spacing */
}

.guidelines li,
.involved li {
  margin-bottom: 15px;
  font-size: 1rem;
  line-height: 1.6;
  color: #222;
  padding: 0;             /* Remove extra padding */
}

/* Section titles */
.section-title {
  text-align: center;
  margin-bottom: 25px;
  color: #0d3b66;
}


.footer-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  gap: 40px;
  text-align: center;
}

.contact-form {
  flex: 1 1 100%;
}

.contact-form form {
  display: flex;
  flex-direction: column;
  gap: 12px;
  max-width: 500px;
  margin: auto;
}

.contact-form input, 
.contact-form textarea {
  padding: 12px;
  border: none;
  border-radius: 6px;
  outline: none;
  font-size: 1rem;
}

.contact-form button {
  background: yellow;
  color: #0d3b66;
  font-weight: bold;
  padding: 20px;
  border: none;
  border-radius: 6px;
  cursor: pointer;
  transition: 0.3s;
}

.contact-form button:hover {
  background: #ddd;
  color: #0d3b66;
}

.socials .social-icons a {
  color: #fff;
  font-size: 1.6rem;
  margin: 0 12px;
  transition: 0.3s;
}

.socials .social-icons a:hover {
  color: #ffd60a;
}

footer .copyright {
  text-align: center;
  margin-top: 35px;
  font-size: 0.9rem;
  opacity: 0.85;
}

/* Hamburger Menu */
.menu-toggle {
  display: none;
  font-size: 1.8rem;
  color: #fff;
  cursor: pointer;
}

/* Responsive */
@media (max-width: 768px) {
  .nav-links {
    display: none;
    flex-direction: column;
    background: #0d3b66;
    position: absolute;
    top: 55px;
    right: 0;
    width: 220px;
    padding: 20px;
    border-radius: 0 0 8px 8px;
  }

  .nav-links.show {
    display: flex;
  }

  .menu-toggle {
    display: block;
  }

  .footer-container {
    flex-direction: column;
    align-items: center;
  }
}
